<div class="noidungpost">
	<div class="container">
		<h2 class="page-header">Manage Order <%= link_to "Create New", new_admin_order_path, class:'btn btn-success pull-right' %></h2>
		<table class="table table-striped">
		
		
		<%= @x.each do |key, value| %>
			<% tour = Tour.where(:id => key) %>
				<% tour.each do |x| %>
					<%= x.title %>
					<% end %>
		<% end %>


		<tr>
		  <th>Order ID</th>
		  <th>Ten khach hang</th>
		  <th>Tour nao</th>
		  <th>So luong</th>
		  <th>SDT</th>
		  <th>note</th>
		  <th>Status</th>
		  <th>Actions</th>
		</tr>
		<% @orders.each do |order| %>
			<tr>
			  <td><%= order.id %></td>    
			  <td><%= order.User_name %></td>    
			  <td><%= Tour.find(order.tour_id).title %></td>    
			  <td><%= order.number %></td>    
			  <td><%= order.telephonenum %></td>    
			  <td><%= order.note %></td>    
			  <td><%= order.status %></td>    
			  <td><%= link_to "Show", admin_orders_show_path(order), class:'btn btn-primary' %> <%= link_to "Edit", edit_admin_order_path(order), class:'btn btn-primary' %> <%= link_to "Delete", admin_order_path(order), class:'btn btn-danger', method: :delete, data: {confirm: 'Are you sure'} %></td>
			</tr>
		<% end %>
		</table>
		<%= will_paginate @blogs %>

	</div>
</div>