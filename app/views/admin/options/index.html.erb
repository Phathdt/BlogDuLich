<div class="row">
	<ol class="breadcrumb">
		<li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
		<li class="active">10 đơn hàng mới nhất chưa xử lí</li>
		<%=link_to " Quản lý Order ", admin_orders_path, class:'pull-right btn btn-success' %>
	</ol>
	<table class="table table-striped">		
		<tr>
		  <th>ID</th>
		  <th>Tên khách hàng</th>
		  <th>Đi tour</th>
		  <th>Số lượng người</th>
		  <th>Số đt</th>
		  <th>Email</th>
		  <th>Ghi chú</th>
		  <th>Actions</th>
		</tr>
		<% @order_unready.reverse.each do |order| %>
			<tr>
			  <td><%= order.id %></td>    
			  <td><%= order.User_name %></td> 
			  <% @tour_name.each do |tour| %>
			  	<% if tour.id == order.tour_id %>
			  		<td><%= tour.title %></td>   
			  	<% end %>
			  <% end %> 
			  <td><%= order.number %></td>    
			  <td><%= order.telephonenum %></td>    
			  <td><%= order.email %></td>    
			  <td><%= order.note %></td>    
			  <td><%= link_to "Edit", edit_admin_order_path(order), class:'btn btn-primary' %> <%= link_to "Delete", admin_order_path(order), class:'btn btn-danger', method: :delete, data: {confirm: 'Are you sure'} %></td>
			</tr>
		<% end %>
		</table>
</div><!--/.row-->

