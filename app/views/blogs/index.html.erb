<div class="container">
	<% @categories.each do |category| %>
		<div class="row">
		    <h1><%= category.name %></h1>
		    <hr class="style1">
		    <% @blogs.each do |blog| %>
		    	<% if blog.blogcategory_id == category.id %>
			    	<%= link_to blog_path(blog), :action => 'go' do %>
		    			<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
				            <div class="tour">
				            	<%= image_tag blog.image.url, width:'100%' %>
				                <h3><%= blog.title %></h3>
				            </div>
				        </div>
					<% end %>
		    	<% end %>
		    <% end %>	    
		</div>
	<% end %>
</div>