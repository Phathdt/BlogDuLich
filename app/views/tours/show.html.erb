<section class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-9">
                <div class="content-block">
                    <div class="single_post">
                        <div class="post_thumb">
                             <%= image_tag @tour.image.url, width:'100%' %>
                        </div><!--end post thumb-->
                        <div class="meta">
                            <span class="tour-duration">Thời gian : <%= @tour.time %></span>
                            
                            <span class="date">Khởi hành : <%= @tour.datepart %></span>

                            <span class="tour-duration">Gía : <%= @tour.price %>₫</span>

                        </div><!--end meta-->
                        
                        <h2><%= @tour.title %></h2>
                        
                        <div class="post_desc">
                            <%= @tour.body.html_safe %>
                            
                        </div><!--end post desc-->
                    </div>
                    
                </div>
            </div>
            
            <div class="col-xs-12 col-sm-4 col-md-3">                
                <div class="sidebar">
                    <div class="sidebar-item">
                        <h3>đặt tour</h3>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Mục</th>
                                    <th>Nội dung</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Tên tour</td>
                                    <td><%= @tour.title %></td>
                                </tr>
                                <tr>
                                    <td>Thời gian</td>
                                    <td><%= @tour.time %></td>
                                </tr>
                                <tr>
                                    <td>Khởi hành</td>
                                    <td><%= @tour.datepart %></td>
                                </tr>
                                <tr>
                                    <td>Gía</td>
                                    <td><%= @tour.price %></td>
                                </tr>
                            </tbody>
                        </table>
                        <%= link_to "Đặt tour", orders_add_path(:order => {:tour_id => @tour.id , :number => 1} ), :class =>"booking btn btn-primary"  %>
                            
                        </form>
                </div><!--end sidebar-item-->   
                        <div class="sidebar-item">
                            <h3>danh mục</h3>
                            <ul class="category-list">
                            <% @categories.reverse.each do |category| %>
                                <li><%= link_to category.name, tourcategory_path(category), class:'fa fa-angle-right' %></li>
                            <% end %>
                            </ul>
                        </div><!--end sidebar-item-->                                        
                   
                    
                </div><!--end sidebar-->


            </div>
            
        </div>
    </div>
</section>
<!--end main-content-->

<!-- Deals and Discounts -->
